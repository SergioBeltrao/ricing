rofi.color-normal: argb:31d1f21, #c4cbd4, argb:96404552, #4084d6, #f9f9f9
rofi.color-urgent: argb:2c1d1f21, #cc6666, argb:e54b5160, #a54242, #f9f9f9
rofi.color-active: argb:2c1d1f21, #65acff, argb:e44b5160, #4491ed, #f9f9f9

! Largura da janela em porcentagem
rofi.width: 100

! Número de linhas
rofi.lines: 4

! Númedo de colulas
rofi.columns: 1

! A fonte e tamanho utilizadas
rofi.font: Inconsolata 25

! Defina a largura da borda em pixels.
rofi.bw: 0

! Define a margem interna da janela.
rofi.padding: 400

! Altura de cada uma das linhas
rofi.eh: 1

! Faz com que o tracejado abaixo da primeira caixa seja continuo.
rofi.separator-style: solid

! Esconde a barra de rolagens latral.
rofi.hide-scrollbar: true

! Desabilita o histórico de pesquisas
rofi.disable-history: true

! Muda o texto ao lado da caixa de lançamento do aplicativo
rofi.display-run: Iniciar
